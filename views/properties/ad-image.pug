extends ../layout/admin

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")


block content
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Real 
            span.font-normal State
        h2.text-center.text-2xl.font-extrabold= page

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-500.text-white.uppercase.text-xs.text-center.p-2.mb-1.rounded-md.font-bold=error.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(class="dropzone" method="POST")
                input(type="hidden" name="_csrf" value=csrfToken)
                                        
                input(class="bg-indigo-600 hover:bg-indigo-700 rounded w-full text-white font-bold uppercase cursor-pointer py-2" type="submit" value="Post property")

block scripts
    script(src="/js/adImage.js")