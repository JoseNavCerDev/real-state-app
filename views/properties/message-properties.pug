extends ../layout/admin

block content
    h2(class="text-2xl font-extrabold text-center my-10")= page

    a(class="rounded py-2 px-10 bg-indigo-600 hover:bg-indigo-700 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full md:w-auto" href="/api/properties/my-properties") Return

    //pre= JSON.stringify(message, undefined, 2)

    div(class="mx-auto max-w-4xl bg-white shadow p-5")

        if message.length
            ul 
                each message_ in message
                    li(class="border-gray-200 border-b p-5")

                        p(class="font-bold text-gray-800") Name: 
                            span(class="font-normal")= message_.user.name
                        
                        p(class="font-bold text-gray-800") Email: 
                            span(class="font-normal")= message_.user.email

                        p(class="font-bold text-gray-800") Message:  
                            span(class="font-normal")= message_.message
                        
                        p(class="font-bold text-gray-800") Sending:  
                            span(class="font-normal")= dateFormat( message_.createdAt )
        else
            p(class="text-center text-gray-600") You don't have messages