extends ../layout/admin

block content
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Real 
            span.font-normal State
        h2.text-center.text-2xl.font-extrabold= page

        a(class="rounded py-2 px-10 bg-indigo-600 hover:bg-indigo-700 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full md:w-auto" href="/api/properties/create-property") Property sale
        input(type="hidden" name="_csrf" value=csrfToken)

        //pre=JSON.stringify(properties, undefined, 2)

        if properties.length  
            div(class="bg-white shadow rounded")
                ul(class="divide-y divide-gray-200")
                    each property in properties
                        li  
                            div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 gap-4")

                                div(class="sm:w-1/4 md:w-1/6")
                                    img(class="w-full block" src=`/uploads/${property.image}` alt=`Image property ${property.image}`) 

                                div(class="sm:w-2/4 md:w-3/6 lg:w-4/6 space-y-3") 

                                    a(class="block text-2xl font-extrabold text-indigo-600 truncate" href=`/api/public/property/${property.id}`)= property.title
                                    p(class="text-sm text-black font-bold")= property.category.categories_name

                                    p(class="text-sm text-gray-600 font-bold flex items-center")
                                        svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6")
                                            path(stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z")

                                        = property.price.price_name
                                    
                                    a( class="text-sm text-gray" href=`/api/properties/messages/${property.id}`)= `You have ${property.messages.length} message${property.messages.length > 1 ? 's' : ''}`

                                div(class="sm:w-1/4 md:w-2/6 lg:flex-1 flex flex-col lg:flex-row gap-2") 

                                    form(action="" method="")
                                        input(type="hidden" name="_csrf" value=csrfToken)
                                        input(class=`w-full px-2 py-2 md:py-1 text-s leading-5 font-semibold rounded-md cursor-pointer ${property.isPublicated ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-red-800' }` value=`${property.isPublicated ? 'Published' : 'Not published'}` type="submit")

                                    a(href=`/api/properties/edit-property/${property.id}` class="text-center px-2 py-2 md:py-1 text-s leading-5 font-semibold rounded-md cursor-pointer bg-indigo-100 text-indigo-800") Edit 

                                    form(action=`/api/properties/delete-property/${property.id}` method="POST")
                                        input(type="hidden" name="_csrf" value=csrfToken)
                                        input(class=`w-full px-2 py-2 md:py-1 text-s leading-5 font-semibold rounded-md cursor-pointer bg-red-100 text-red-800` value="Delete" type="submit")

                div(class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6")

                    div(class="flex-1 flex justify-between sm:hidden")
                        a(href=`/api/properties/my-properties?page=${pageByQuery - 1}` class=`${pageByQuery === 1 ? 'pointer-events-none' : ''} relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-600 bg-white hover:bg-gray-50`) Previous

                        a(href=`/api/properties/my-properties?page=${pageByQuery + 1}` class=`${pageByQuery === pagesNumber ? 'pointer-events-none' : ''} relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-600 bg-white hover:bg-gray-50`) Next



                    div(class=" hidden sm:flex-1 sm:flex sm:items-center sm:justify-between")
                        p(class="text-sm text-gray-700 gap-2") Showing 
                            span(class="font-medium") #{offset + 1} to 
                            span(class="font-medium") #{total < limit + offset ? total : limit + offset} of  
                            span(class="font-medium") #{total} results

                    div(class="hidden sm:block")
                        nav(class="relative z-0 inline-flex rounded-md shadow-md")
                            - var n = 1;
                                while n <= pagesNumber
                                    a(class=`${pageByQuery == n ? 'bg-indigo-50 border-indigo-500 text-infigo-600' : 'bg-white border-gray-300 text-gray-500 hover:bg-gray-50' } relative inline-flex items-center px-4 py-2 border text-sm font-medium` href=`/api/properties/my-properties?page=${n}`) #{n++}

        else 
            p(class="text-center") There aren't properties yet...

